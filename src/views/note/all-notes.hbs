<div class="row'>
  <h1>todas las notas</h1>
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
	  <h4 class="card-title d-flex justify-content-between align-items-center"> 
	    {{this.title}}<a href="/notes/edit/{{this._id}}">edit<i class="fas fa-edit"></i></a>
	  </h4>
	  <p>
	    {{this.description}}
	  </p>
	  <form action="/note/delete/{{this._id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
	    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
	  </form>
	</div>
      </div>
    </div>
    {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
